<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.jw_org.MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_weight="3"
        android:scaleType="center"
        android:src="@drawable/jw_image"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1C70AE"
        android:text="Jehovah's Wittnesses "
        android:textColor="#fff"
        android:textSize="36sp"
        android:gravity="center"
        android:fontFamily="sans-serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1C70AE"
        android:text="Bible Teachers "
        android:textColor="#fff"
        android:textSize="36sp"
        android:gravity="center"
        android:fontFamily="sans-serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Phone: 575-591-7303"
        android:textSize="26sp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="1228 E. 3rd St. Portales, NM"
        android:textSize="26sp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>

    <TextView android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Hours: Sunday @ 1PM "
    android:textSize="24sp"
    android:gravity="center_vertical"
    android:paddingLeft="12dp"/>
    <TextView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Thursdays@7PM "
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:paddingLeft="88dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Website: www.JW.org"
        android:textSize="26sp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>
</LinearLayout>
